@model IEnumerable<BlogWorkshopMVC.Data.Models.Article>
<h1>Welcome to Article View!</h1>


<div class="row">

@foreach (var article in Model)
{
	<div class="card" style="width: 20rem; margin: 2rem">
		<div class="card-body">
			<h5 class="card-title">@article.Title</h5>
			<p class="card-text">@article.Content</p>
			<a asp-action="Details" asp-controller="Article" asp-route-id="@article.Id" class="btn btn-primary">Read</a>
			@if (ViewBag.UserId == article.UserId)
			{
				<a asp-action="Edit" asp-controller="Article" asp-route-id="@article.Id" class="btn btn-warning">Edit</a>
			}
		</div>
	</div>

}
</div>